{
  "compilerOptions": {
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib": ["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src", "CHANGELOG.md", "LICENSE.md", "README.md"],
  "exclude": ["node_modules", "**/__tests__/*", "**/__mocks__/*", "dist"]
}
